<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_icon"/>

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#333"
            android:paddingLeft="15dp"
            android:text="Add New Request"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile*"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="number"
                android:layout_marginBottom="20dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternate Mobile"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>
            <EditText
                android:id="@+id/mobile2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="number"
                android:layout_marginBottom="20dp"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>
                    <EditText
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>
                    <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#000"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parents Name"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/product_bg_round"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/coType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:spinnerMode="dialog"
                        android:background="#ffffff"
                        android:padding="0dp"
                        android:textSize="14dp"
                        android:textColor="#000"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/dropdown_icon"/>

                </LinearLayout>
            <EditText
                android:id="@+id/careof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:spinnerMode="dialog"
                        android:background="#ffffff"
                        android:padding="0dp"
                        android:textSize="14dp"
                        android:textColor="#000"/>

                     <ImageView
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:layout_weight="0.1"
                         android:src="@drawable/dropdown_icon"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DOB"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:text="Select"
                        android:layout_marginBottom="20dp"
                        android:textColor="#333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>
                    <EditText
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:inputType="number"
                        android:layout_marginBottom="20dp"
                        android:textColor="#333"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State*"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:spinnerMode="dialog"
                    android:background="#ffffff"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/dropdown_icon"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clinic*"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/clinic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:spinnerMode="dialog"
                    android:background="#ffffff"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/dropdown_icon"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Disease / Symptom*"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:visibility="gone"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/disease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:spinnerMode="dialog"
                    android:background="#ffffff"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/dropdown_icon"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointment"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/apt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:textSize="16dp"
                android:text="Select Date"
                android:layout_marginBottom="20dp"
                android:textColor="#333"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Health Card Type*"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/hctype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:spinnerMode="dialog"
                            android:background="#ffffff"
                            android:padding="0dp"
                            android:textSize="14dp"
                            android:textColor="#000"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/dropdown_icon"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/typeBlock"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Type*"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/empType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:spinnerMode="dialog"
                            android:background="#ffffff"
                            android:padding="0dp"
                            android:textSize="14dp"
                            android:textColor="#000"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/dropdown_icon"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/hcnumlable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Card Number*"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>
            <EditText
                android:id="@+id/hcnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>
                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Country*"
                        android:textColor="#333"
                        android:paddingBottom="5dp"
                        android:textSize="12dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/product_bg_round"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:spinnerMode="dialog"
                            android:background="#ffffff"
                            android:padding="0dp"
                            android:textSize="14dp"
                            android:textColor="#000"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/dropdown_icon"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remark"
                android:textColor="#333"
                android:paddingBottom="5dp"
                android:textSize="12dp"/>
            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/product_bg_round"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_bg_orange"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Submit"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Mandatory input."
                android:textColor="#333"
                android:paddingTop="20dp"
                android:paddingBottom="15dp"
                android:textStyle="italic"
                android:textSize="12dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>